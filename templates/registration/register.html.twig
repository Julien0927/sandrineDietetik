{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="container">
    <div class="row">
        <div class=col>
        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}
            <fieldset class="mb-3">
                <legend>Coordonn√©es du patient</legend>
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
            </fieldset>
            <fieldset class="mb-3">
                <legend>Informations personnelles</legend>
                {{ form_row(registrationForm.allergenType) }}
                {{ form_row(registrationForm.dietType) }}
            </fieldset>

            {#{{ form_row(registrationForm.RGPDConsent) }}#}

            <button type="submit" class="btn my-3">Inscrire</button>
            <a href="{{ path('app_login')}}" class="btn">Me connecter</a>
        {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
{% endblock %}
